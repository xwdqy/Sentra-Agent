# 是否启用插件
# type: boolean
# options: true | false
PLUGIN_ENABLED=true

# 插件超时时间（毫秒）
# type: number
# range: 30000-600000
PLUGIN_TIMEOUT_MS=90000

# 搜索源顺序（逗号分隔），支持：bing,wallpaper,unsplash
# type: string
# example: bing,wallpaper,unsplash
IMAGE_SEARCH_PROVIDERS=bing,wallpaper,unsplash

# Unsplash API Access Key（可选，不配置则不使用 Unsplash）
# type: string
UNSPLASH_ACCESS_KEY=

# 保存根目录（默认：artifacts）
# type: string
UNSPLASH_BASE_DIR=artifacts

# 最大下载图片数量（防止滥用 API）
# type: number
# range: 1-50
UNSPLASH_MAX_COUNT=10

# 压缩阈值：图片数量超过此值时打包为 zip
# type: number
# range: 1-50
UNSPLASH_ZIP_THRESHOLD=3

# 图片质量
# type: enum
# options: regular | full | small | thumb
UNSPLASH_QUALITY=regular

# API 搜索请求超时（毫秒）
# type: number
# range: 5000-60000
UNSPLASH_FETCH_TIMEOUT_MS=20000

# 单张图片下载超时（毫秒）
# type: number
# range: 30000-300000
UNSPLASH_DOWNLOAD_TIMEOUT_MS=120000

# 并发下载数（建议 3-10）
# type: number
# range: 1-20
UNSPLASH_CONCURRENCY=5

# 可选：User-Agent（如遇限流可自定义）
# type: string
UNSPLASH_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 Chrome/124 Safari/537.36
