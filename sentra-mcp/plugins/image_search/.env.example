# 是否启用插件
PLUGIN_ENABLED=true

# 插件超时时间，毫秒
PLUGIN_TIMEOUT_MS=90000

# 搜索源顺序（逗号分隔），支持：bing,wallpaper,unsplash，例如：bing,wallpaper,unsplash 表示优先使用 Bing，不足再用壁纸 API，最后使用 Unsplash 补充
IMAGE_SEARCH_PROVIDERS=bing,wallpaper,unsplash

# 如不配置，仅使用壁纸API，申请地址：https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=YOUR_ACCESS_KEY_HERE

# 保存根目录（默认：artifacts）
UNSPLASH_BASE_DIR=artifacts

# 最大下载图片数量（默认 10，防止滥用 API）
UNSPLASH_MAX_COUNT=10

# 压缩阈值：图片数量超过此值时打包为 zip（默认 3）
UNSPLASH_ZIP_THRESHOLD=3

# 图片质量：regular(1080宽) / full(原图) / small(400宽) / thumb(200宽)
UNSPLASH_QUALITY=regular

# 分步超时控制（按网络情况调整，单位毫秒）
UNSPLASH_FETCH_TIMEOUT_MS=20000       # API 搜索请求超时，默认 20秒
UNSPLASH_DOWNLOAD_TIMEOUT_MS=120000   # 单张图片下载超时，默认 120秒

# 并发下载数（默认 5，建议 3-10）
UNSPLASH_CONCURRENCY=5

# 可选：User-Agent（如遇限流可自定义）
UNSPLASH_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 Chrome/124 Safari/537.36
