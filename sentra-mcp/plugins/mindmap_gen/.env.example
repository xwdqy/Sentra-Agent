# 是否启用插件
# type: boolean
# options: true | false
PLUGIN_ENABLED=true

# 插件超时时间（毫秒）
# type: number
# range: 60000-600000
PLUGIN_TIMEOUT_MS=150000

# 思维导图工具 LLM 的 API 基础地址（默认 https://yuanplus.chat/v1）
# type: string
MINDMAP_BASE_URL=https://yuanplus.chat/v1

# 思维导图工具 LLM 的 API 密钥
# type: string
MINDMAP_API_KEY=

# 思维导图工具使用的 LLM 模型
# type: string
MINDMAP_MODEL=gemini-flash-latest

# 思维导图渲染的超时时间（毫秒）
# type: number
# range: 10000-300000
MINDMAP_TIMEOUT=90000

# 思维导图渲染的宽度（像素）
# type: number
# range: 800-8000
MINDMAP_WIDTH=2400

# 思维导图渲染的高度（像素）
# type: number
# range: 600-6000
MINDMAP_HEIGHT=1600

# 思维导图加载完成后的等待时间（毫秒）
# type: number
# range: 1000-60000
MINDMAP_WAIT_TIME=9000

# 思维导图的默认样式
# type: string
MINDMAP_DEFAULT_STYLE=default

# 思维导图工具使用的资源加载模式
# type: enum
# options: cdn | local
MINDMAP_ASSET_MODE=local

# 思维导图内容在视口中的占比（0-1）
# type: number
# range: 0.1-1.0
MINDMAP_FIT_RATIO=0.9

# 思维导图最大缩放倍数
# type: number
# range: 0.5-5.0
MINDMAP_MAX_SCALE=2.0