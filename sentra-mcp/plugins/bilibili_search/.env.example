# 是否启用插件
# type: boolean
# options: true | false
PLUGIN_ENABLED=true

# 插件超时时间（毫秒）
# type: number
# range: 30000-600000
PLUGIN_TIMEOUT_MS=90000

# 保存根目录（默认：artifacts）
# type: string
BILI_BASE_DIR=artifacts

# 清晰度编码（Bilibili qn 参数）
# type: number
# options: 127 | 120 | 116 | 112 | 80 | 64 | 32 | 16
BILI_QUALITY=80

# 最大下载大小（单位MB），超过则不下载，仅返回链接
# type: number
# range: 10-1000
BILI_MAX_DOWNLOAD_MB=65

# 是否保存封面
# type: boolean
# options: true | false
BILI_SAVE_COVER=true

# 搜索/详情/直链请求超时（毫秒）
# type: number
# range: 5000-60000
BILI_FETCH_TIMEOUT_MS=20000

# 大小探测超时（毫秒）
# type: number
# range: 1000-30000
BILI_PROBE_TIMEOUT_MS=8000

# 下载超时（毫秒）
# type: number
# range: 30000-600000
BILI_DOWNLOAD_TIMEOUT_MS=120000

# 未知大小时是否直接返回链接（默认 true，避免超时）
# type: boolean
# options: true | false
BILI_STRICT_PROBE=true

# User-Agent（如遇 412/403，可以自定义通过风控）
# type: string
BILI_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 Chrome/124 Safari/537.36

# 可选：登录 Cookie（提高稳定性/清晰度）
# type: string
BILI_COOKIE=

# 是否默认发送自定义音乐卡片（默认 false，仅下载）
# type: boolean
# options: true | false
BILI_SEND_AS_MUSIC_CARD=true

# WebSocket SDK 地址（用于发送消息）
# type: string
WS_SDK_URL=ws://127.0.0.1:6702

# WebSocket 超时时间（毫秒）
# type: number
# range: 5000-60000
WS_SDK_TIMEOUT_MS=15000

# 发送方式（pair 或 object）
# type: enum
# options: pair | object
WS_SDK_ARG_STYLE=pair

# 自定义发送路径（默认使用下面的私聊/群聊路径）
# type: string
WS_SDK_SEND_PATH=

# 私聊发送路径
# type: string
WS_SDK_SEND_PATH_PRIVATE=send.private

# 群聊发送路径
# type: string
WS_SDK_SEND_PATH_GROUP=send.group