# 是否启用插件
# type: boolean
# options: true | false
PLUGIN_ENABLED=true

# 插件超时时间（毫秒）
# type: number
# range: 60000-600000
PLUGIN_TIMEOUT_MS=360000

# 语音转写 API Base URL（必填）
# type: string
OPENAI_BASE_URL=https://qwen3asr.deno.dev/v1

# 模型名称（可选，默认 whisper-1）
# type: string
WHISPER_MODEL=qwen3-asr-flash:itn

# 基础存储目录（临时文件会保存在 {AV_BASE_DIR}/tmp/av_transcribe）
# type: string
AV_BASE_DIR=artifacts

# 抓取 User-Agent（部分站点需要，避免 403/405/412）
# type: string
AV_FETCH_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 Chrome/124 Safari/537.36

# 可选：来源页 Referer（如 QQ 文件直链需指定来源域）
# type: string
AV_FETCH_REFERER=https://gzc-download.ftn.qq.com/

# 可选：登录 Cookie（如资源需要鉴权）
# type: string
AV_FETCH_COOKIE=

# 可选：额外抓取头（JSON 字符串）
# type: string
AV_FETCH_HEADERS_JSON={"Accept":"*/*","Accept-Language":"zh-CN,zh;q=0.9"}

# 是否启用音频切片
# type: boolean
# options: 1 | 0
AV_CHUNK_ENABLED=1

# 单个切片目标大小（MB）
# type: number
# range: 1-20
AV_CHUNK_SIZE_MB=2

# 单个切片最大允许大小（MB）
# type: number
# range: 1-50
AV_MAX_CHUNK_SIZE_MB=2

# 相邻切片重叠区大小（KB）
# type: number
# range: 0-1024
AV_CHUNK_OVERLAP_KB=15

# 并发任务上限
# type: number
# range: 1-10
AV_MAX_CONCURRENCY=2

# 最大重试次数
# type: number
# range: 0-10
AV_MAX_RETRIES=3

# 重试基础回退时间（毫秒）
# type: number
# range: 100-5000
AV_RETRY_BASE_MS=800

# 整体转写超时时间（毫秒，串行或网络较慢时可适当调大）
# type: number
# range: 30000-600000
WHISPER_TIMEOUT_MS=90000